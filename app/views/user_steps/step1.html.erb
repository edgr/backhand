<div class="main-container">
  <div class="row">
    <div class="form-signup col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
      <div class="login-steps">
        <ul class="sign-in-steps">
          <li class="sign-in-step active">1</li>
          <li class="sign-in-bar"></li>
          <li class="sign-in-step">2</li>
          <li class="sign-in-bar"></li>
          <li class="sign-in-step">3</li>
        </ul>
      </div>

      <h2>About you</h2>

      <%= simple_form_for @user, url: wizard_path do |f| %>
        <div class="form-inputs form-label">
          <div class="d-flex justify-content-between">
            <%= f.input :first_name,
                        label: "FIRST NAME" %>
            <%= f.input :last_name,
                        label: "LAST NAME" %>
          </div>
          <%= f.input :address,
                      label:"ADDRESS" %>
          <%= f.input :country,
                      collection: @continents,
                      label:"NATIONALITY" %>
          <div class="d-flex justify-content-between">
            <%= f.input :place_of_birth,
                        label:"PLACE OF BIRTH",
                        class: "search_location" %>
            <%= f.input :birthday,
                        input_html: {class: "datepicker"},
                        as: :string,
                        # start_year: Date.today.year - 12,
                        # end_year: 1940,
                        # order: [ :day, :month, :year],
                        label:"BIRTHDATE" %>
          </div>
          <div class="d-flex justify-content-between">
            <%= f.input :gender,
                        collection: User.genders,
                        label:"GENDER" %>
            <%= f.input :height,
                        label:"HEIGHT",
                        placeholder: "in cm" %>
            <%= f.input :weight,
                        label:"WEIGHT",
                        placeholder: "in kg" %>
          </div>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "next", class: "btn btn-primary cta-signup mb-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
