<div class="main-container">
  <div class="row">
    <div class="form-login col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4">

      <h2>Step 1: about you</h2>

      <%= simple_form_for @user, url: wizard_path do |f| %>
        <div class="form-inputs form-label">
          <div class="d-flex justify-content-between">
            <%= f.input :first_name,
                        label: "FIRST NAME" %>
            <%= f.input :last_name,
                        label: "LAST NAME" %>
          </div>
          <%= f.input :address,
                      label:"ADDRESS" %>
          <%= f.input :country,
                      collection: @continents,
                      label:"NATIONALITY" %>
          <div class="d-flex justify-content-between">
            <%= f.input :place_of_birth,
                        label:"PLACE OF BIRTH",
                        class: "search_location" %>
            <%= f.input :birthday,
                        input_html: {class: "datepicker"},
                        as: :string,
                        # start_year: Date.today.year - 12,
                        # end_year: 1940,
                        # order: [ :day, :month, :year],
                        label:"BIRTHDATE" %>
          </div>
          <div class="d-flex justify-content-between">
            <%= f.input :gender,
                        collection: User.genders,
                        label:"GENDER" %>
            <%= f.input :height,
                        label:"HEIGHT",
                        placeholder: "in cm" %>
            <%= f.input :weight,
                        label:"WEIGHT",
                        placeholder: "in kg" %>
          </div>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Next", class: "btn btn-primary cta-signup mb-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
