<div class="main-container">
  <div class="row">
    <div class="form-signup col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
      <div class="login-steps">
        <ul class="sign-in-steps">
          <li class="sign-in-step active">1</li>
          <li class="sign-in-bar active"></li>
          <li class="sign-in-step active">2</li>
          <li class="sign-in-bar"></li>
          <li class="sign-in-step">3</li>
        </ul>
      </div>

      <h2>About your game</h2>

      <%= simple_form_for @user, url: wizard_path do |f| %>
        <div class="form-inputs form-label">
          <%= f.input :level,
                      collection: User.levels,
                      label: "PICK YOUR LEVEL" %>
          <%= f.input :style_of_play,
                      collection: User.styles,
                      label:"WHAT IS YOUR STYLE OF PLAY?" %>
          <%= f.input :handedness,
                      collection: %w[righty lefty],
                      label: "RIGHTY OR LEFTIE?" %>
          <%= f.input :backhand_style,
                      collection: ["one handed backhand", "two handed backhand"],
                      label: "BACKHAND STYLE?" %>
          <%= f.association :club,
                            label: "WHICH ONE IS YOUR CLUB?" %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "next", class: "btn btn-primary cta-signup mb-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
