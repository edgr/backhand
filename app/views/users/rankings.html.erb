<div class="container">
  <div class="ranking-tabs">
    <ul class="list-inline tabs-underlined">
      <li>
        <a href data-target="club_ranking" class="tab-underlined active tab-title-show">
          <%= t('.club_ranking', club: current_user.club.shortname) %>
        </a>
      </li>
      <li>
        <a href="#" data-target="general_ranking" class="tab-underlined tab-title-show">
          <%= t('.general_ranking') %>
        </a>
      </li>
    </ul>
    <table class="ranking-table" id="club_ranking">
      <tbody>
        <% @club_users.each do |user| %>
            <% present user do |user_presenter| %>
              <tr>
                <td class="center-text-table rankings-table">
                  <%= user_presenter.club_ranking(@club_users, user) %>
                </td>
                <td class="center-text-table">
                  <% if user.country.present? %>
                    <span class="flag-icon flag-icon-<%= user.country.downcase %>"></span>
                  <% else %>
                    <i class="far fa-flag"></i>
                  <% end %>
                </td>
                <td class="text-align-left">
                  <%= link_to user_path(user) do %>
                    <%= user_presenter.full_name %>
                    (<%= user.ranking %>)
                  <% end %>
                </td>
                <td class="center-text-table points-table"><%= user_presenter.points %> </td>
              </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
    <table class="ranking-table hidden" id="general_ranking">
      <tbody>
        <% @users.each do |user| %>
            <% present user do |user_presenter| %>
              <tr>
                <td class="center-text-table rankings-table"><%= user.ranking %></td>
                <td class="center-text-table">
                  <% if user.country.present? %>
                    <span class="flag-icon flag-icon-<%= user.country.downcase %>"></span>
                  <% else %>
                    <i class="far fa-flag"></i>
                  <% end %>
                </td>
                <td class="text-align-left">
                  <%= link_to user_path(user) do %>
                    <%= user_presenter.full_name %>
                  <% end %>
                </td>
                <td class="center-text-table">
                  <% if user.club.present? %>
                    <%= user.club.shortname %>
                  <% end %>
                </td>
                <td class="center-text-table points-table"><%= user_presenter.points %> </td>
              </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="actions-wrapper">
    <button type="button" class="mdc-fab app-fab--absolute" aria-label="question" data-toggle="modal" data-target="#exampleModalCenter">
      <span class="help-questionmark">?</span>
    </button>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content elo-explained">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">
          <%= t('.title') %>
        </h5>
      </div>
      <div class="modal-body">
        <p>
          <%= t('.first_p_html') %>
        </p>
        <p>
          <%= t('.second_p_html') %>
        </p>
        <p>
          <%= t('.third_p_html') %>
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          <%= t('.got_it') %>
        </button>
      </div>
    </div>
  </div>
</div>
