<div class="container">
  <table class="ranking-table">
    <tbody>
      <% @users.each do |user| %>
          <% present user do |user_presenter| %>
            <tr>
              <td class="center-text-table rankings-table"><%= user.ranking %></td>
              <td class="center-text-table">
                <span class="flag-icon flag-icon-by flag-icon-<%= user.country.downcase %>"></span>
              </td>
              <td class="text-align-left">
                <%= link_to user_path(user) do %>
                  <%= user_presenter.full_name %>
                <% end %>
              </td>
              <td class="center-text-table"><%= user.club.shortname %></td>
              <td class="center-text-table points-table"><%= user_presenter.points %> </td>
            </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
