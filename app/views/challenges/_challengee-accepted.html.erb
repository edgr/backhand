<div class="challenge-info text-center text-dark pt-3 pb-5">
  <h2>You have accepted<br>
    <%= link_to @challenger.first_name, user_path(@challenger) %>'s challenge.
  </h2>
  <h2>
    Get in touch now!
  </h2>

</div>

<p><%= link_to "Cancel Challenge", decline_challenge_path(@challenge), :method => :patch, :data => {:confirm => "Do your really want to decline the Challenge?"}, class: "btn w-100 text-center"%></p>
<p><%= link_to "Contact Player", accept_challenge_path(@challenge), :method => :patch, class: "btn btn-primary w-100" %></p>



