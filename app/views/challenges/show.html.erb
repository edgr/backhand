<div class="container">
  <%= link_to "Back to all your challenges", challenges_path, :method => :get %>

  <div class="section group">
    <div class="col span_1_of_2 current-user-vs user-name">
    <div class="overflow-wrap current-user-name">
      <h1><%= current_user.first_name  %></h1>
    </div>
    <div class="vs"><h1>VS</h1></div>
    </div>
    <div class="col span_1_of_2 other-user-opponent-vs challenger-name">
    <h1><%= @challengee.first_name %></h1>
    </div>
  </div>

  <% if @challenge.challenger == current_user %>
      <% if @challenge.status == "Pending" %>
      <%= render partial: "challenger-pending" %>
    <% else %>
      <%= render partial: "challenger-accepted" %>
    <% end %>
  <% else %>
    <% if @challenge.status == "Pending"  %>
      <%= render partial: "challengee-pending" %>
    <% else %>
      <%= render partial: "challengee-accepted" %>
    <% end %>
  <% end %>
