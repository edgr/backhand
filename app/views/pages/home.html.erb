<% if current_user.nil? %>
  <div class="banner">
    <div class="banner-content">
      <h1>
        PLAY MORE<br>
        PLAY BETTER<br>
        RANK HIGHER.
      </h1>
      <div class="home-ctas-section">
        <%= link_to new_user_registration_path, class: "btn btn-flat", id: "home-cta" do %>
          <span>JOIN US FOR FREE</span>
        <% end %>
      </div>
    </div>
  </div>
  <div class="how-it-works">
    <h2>Find players...</h2>
    <div class="row how-it-works-cards">
      <div class="explain-card">
        <div class="card-number">
          <p>01</p>
        </div>
        <div class="card-content">
          <p>browse players around you</p>
        </div>
      </div>
      <div class="explain-card">
        <div class="card-number">
          <p>02</p>
        </div>
        <div class="card-content">
          <p>view player's profiles and contact them</p>
        </div>
      </div>
      <div class="explain-card">
        <div class="card-number">
          <p>03</p>
        </div>
        <div class="card-content">
          <p>organize your game and play!</p>
        </div>
      </div>
    </div>
    <h2>...and record your matches!</h2>
    <div class="row how-it-works-cards">
      <div class="explain-card">
        <div class="card-number">
          <p>04</p>
        </div>
        <div class="card-content">
          <p>save the score and the winner </p>
        </div>
      </div>
      <div class="explain-card">
        <div class="card-number">
          <p>05</p>
        </div>
        <div class="card-content">
          <p>get your new ranking instantly!</p>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% if current_user %>
  <div class="banner">
    <div class="banner-content">
      <h1>
        TELL<br>
        YOUR<br>
        FRIENDS.
      </h1>
      <div class="home-ctas-section">
        <span id="tell-your-friends" class="btn btn-flat">INVITE</span>
        <button id="hidden-share-button" type="button" class="btn btn-primary" data-toggle="modal" data-target="#share-modal">
          INVITE
        </button>
      </div>
    </div>
  </div>
  <!-- Modal -->
  <div class="modal fade" id="share-modal" tabindex="-1" role="dialog" aria-labelledby="share-modal-title" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="share-modal-title">
            Thanks in advance!
          </h5>
          <button id="share-modal-close" type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <a href="https://www.facebook.com/sharer.php?u=https%3A%2F%2Fwww.backhandapp.com%2F" class="share-fb">
            Share on Facebook
          </a>
          <a href="https://twitter.com/intent/tweet?url=https%3A%2F%2Fwww.backhandapp.com%2F&hashtags=tennis,tennisapp,backhandapp" class="share-tw">
            Share on Twitter
          </a>
          <a href="https://www.linkedin.com/shareArticle?mini=true&url=https%3A%2F%2Fwww.backhandapp.com%2F" class="share-lk">
            Share on LinkedIn
          </a>
          <!-- <span id="copy-link-button">
            Copy link
          </span> -->
        </div>
      </div>
    </div>
  </div>

<% end %>

