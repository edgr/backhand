<div class="banner">
  <div class="banner-content">
    <h1>Find tennis players<br>around you<br>right now!</h1>
  </div>
</div>


<div class="main-container">

  <div class="container text-left">
    <br>
    <%= simple_form_for :search, url: users_path, method: "get" do |f| %>
      <%= f.input :location, as: :string, required: false, input_html: {class: "form-control"}%>
      <%= f.input :partner_level, required: false, collection: ['Beginner','Intermediate','Advanced','Semi-Pro','Pro'], input_html: {class: "form-control"} %>
      <%= f.submit "Search", class: "btn btn-primary btn-lg w-100" %>
    <% end %>
  </div>
</div>


