<div class="navbar-bh">
  <div class="navbar-brand">
    <%= link_to root_path, class: "navbar-brand" do %>
    <p class="logo-back">BACK</p> <p class="logo-hand">HAND</p>
    <% end %>
  </div>

  <% if user_signed_in? %>
    <div class="btn-group">
    <i class="fas fa-bars text-white mobile-large" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      </i>
      <div class="dropdown-menu dropdown-menu-right" id="menu">
        <div class="avatar-burger">
          <button class="dropdown-item" id="profile-button" type="button">
              <%= cl_image_tag current_user.picture, class: "avatar"%>
              <%= link_to "My Profile", user_path(current_user), class: "links" %>
          </button>
        </div>
        <button class="dropdown-item menu-button" type="button">
          <%= link_to "Search partners", users_path, class: "links" %>
        </button>
        <button class="dropdown-item menu-button" type="button">
         <%= link_to "My Challenges", challenges_path, class: "links" %>
        </button>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item menu-button logout links" %>

      </div>
    </div>
  <% else %>
    <div class="login-up">
      <%= link_to 'Sign up', new_user_registration_path, class: "nav-link text-white" %>
      <%= link_to "Login", new_user_session_path, class: "nav-link text-white" %>
    </div>
  <% end %>
</div>
