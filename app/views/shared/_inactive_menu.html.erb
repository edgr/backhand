      <%= link_to t('navbar.matches'), matches_path, class: "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to t('navbar.clubs'), clubs_path, class: "nav-link new-feature" %>
    </li>
    <li class="nav-item">
      <%= link_to t('navbar.callouts'), callouts_path, class: "nav-link new-feature new-feature-callouts" %>
    </li>
    <% if current_user %>
      <%= link_to t('complete_profile'), user_steps_path, class: "d-flex d-lg-none nav-link text-white"%>
    <% else %>
      <li>
        <%= link_to t('navbar.login'), new_user_session_path, class: "d-flex d-lg-none nav-link text-white" %>
      </li>
    <% end %>
  </ul>
</div>
