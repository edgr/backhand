<div class="language-more d-flex d-lg-none">
  <% if user_signed_in? == false  %>
    <div class="nav-item dropdown d-lg-flex">
      <button class="navbar-toggler language-menu dropdown-toggle d-lg-flex" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
        <%= t('navbar.language') %>
      </button>
      <div class="dropdown-menu">
        <%= link_to url_for(locale: :fr), class: "nav-link text-white" do %>
          <span class="flag-icon flag-icon-fr %>"></span>
          <span>français</span>
        <% end %>
        <%= link_to url_for(locale: :es), class: "nav-link text-white" do %>
          <span class="flag-icon flag-icon-es %>"></span>
          <span>español</span>
        <% end %>
