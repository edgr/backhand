<div class="container">
  <% @matches.each do |match| %>
    <div class="index-match-card">
      <%= link_to user_path(match.player_1) do %>
        <div class="<%= match.match_result.winner == match.player_1 ? 'avatar-name-player-1 winner-black' : 'avatar-name-player-1' %>">
          <%= cl_image_tag match.player_1.picture, quality: "auto", class: "avatar"%>
          <div class="first-last-name">
            <span class="first-name"><%= match.player_1.first_name %></span>
            <span class="last-name"><%= match.player_1.last_name.upcase %></span>
          </div>
        </div>
      <% end %>
      <div class="final-score">
        <span class="score"><%= match.match_result.score %></span>
        <span class="date"><%= match.date.strftime("%d %b %Y") %></span>
        <span class="location"><%= match.club.shortname %></span>
      </div>
      <%= link_to user_path(match.player_2) do %>
        <div class="<%= match.match_result.winner == match.player_2 ? 'avatar-name-player-2 winner-black' : 'avatar-name-player-2' %>">
          <%= cl_image_tag match.player_2.picture, quality: "auto", class: "avatar"%>
          <div class="first-last-name">
            <span class="first-name"><%= match.player_2.first_name %></span>
            <span class="last-name"><%= match.player_2.last_name.upcase %></span>
          </div>
        </div>
      <% end %>
    </div>

  <% end %>
</div>
