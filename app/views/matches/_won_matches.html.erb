<% if @won_matches.present? %>
  <% @won_matches.each do |match| %>
    <%# if match.match_result.confirmed == true && match.match_result.winner == current_user %>
      <div class="match-card">
        <% if match.player_1 == current_user %>
          <%= cl_image_tag match.player_2.picture, class: "avatar"%>
          <div class="name-and-date">
            <span class="player-name"><%= match.player_2.first_name %> <%= match.player_2.last_name %> </span>
            <div class="date-location">
              <span class="date"><%= match.date.strftime("%d %b %Y") %></span>
              <span class="separator"> - </span>
              <span class="location"><%= Club.find(match.club_id).name %></span>
            </div>
          </div>
        <% else %>
          <%= cl_image_tag match.player_1.picture, class: "avatar"%>
          <div class="name-and-date">
            <span class="player-name">
              <%= match.player_1.first_name %> <%= match.player_1.last_name %>
            </span>
            <div class="date-location">
              <span class="date"><%= match.date.strftime("%d %b %Y") %></span>
              <span class="separator"> - </span>
              <span class="location"><%= Club.find(match.club_id).name %></span>
            </div>
          </div>
        <% end %>
        <span class="score">
          <%= match.match_result.score %>
        </span>
      </div>
    <%# end %>
  <% end %>
<% else %>
  <p class="text-center">You haven't won any matches yet. Fix that!</p>
<% end %>
