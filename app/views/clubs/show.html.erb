<div class="club-container">
  <div class="club-banner">
    <%= cl_image_tag(@club.picture) %>
  </div>
  <div class="wrapper-map">
    <div id="map-show" data-marker="<%= @marker.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
  <div class="main-info">
    <h1>
      <%= @club.name %>
    </h1>
    <a href="<%= @club.website %>" class="club-website">
      <%= @club.website %>
    </a>
    <a href="mailto:<%= @club.email %>" class="club-email">
      <%= @club.email %>
    </a>
    <a href="tel:<%= @club.phone_number %>" class="club-phone">
      <%= @club.phone_number %>
    </a>
  </div>
  <div class="courts">
    <h2>
      <%= t('.courts') %>
    </h2>
    <% present @club do |club_presenter| %>
      <span class="club-courts">
        <%= club_presenter.courts %>
      </span><br>
      <span>
        <%= club_presenter.courts_indoors %>
      </span><br>
      <span>
        <%= club_presenter.courts_with_lights %>
      </span><br>
      <span>
        <%= club_presenter.singles_courts %>
      </span>
    <% end %>
  </div>
</div>
