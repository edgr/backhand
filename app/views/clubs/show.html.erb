<div class="club-container">
  <%= cl_image_tag(@club.picture) %>
  <div class="main-info">
    <h1><%= @club.name %></h1>
    <span class="club-email"> <%= @club.email %></span>
    <span class="club-phone"> <%= @club.phone_number %></span>
    <span class="club-address"> <%= @club.address %></span>
  </div>
  <div class="map">
    <div id="map-show" style="width: 100%; height: 300px;" data-marker="<%= @marker.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
  <div class="about">
    <h2>About</h2>
    <span class="club-desc"> <%= @club.description %></span>
  </div>
</div>
