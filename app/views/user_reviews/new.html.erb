<div class="container">

  <%= simple_form_for [@challenge, @user_review] do |f| %>

    <fieldset class="form-group radio_buttons optional user_review_thumb">
      <legend class="col-form-label pt-0">Would you recommend playing with your partner? </legend>
      <input type="hidden" name="user_review[thumb]" value="">
      <div class="group-radio">
        <div class="form-check form-check-inline" id="thumb-down">
          <input class="form-check-input radio_buttons optional" readonly="readonly" type="radio" value="false" name="user_review[thumb]" id="user_review_thumb_false">
          <label class="collection_radio_buttons" for="user_review_thumb_false">Not really..</label>
        </div>
        <div class="form-check form-check-inline" id="thumb-up">
          <input class="form-check-input radio_buttons optional" type="radio" value="true" name="user_review[thumb]" id="user_review_thumb_true">
          <label class="collection_radio_buttons" for="user_review_thumb_true">Of Course!</label>
        </div>
      </div>
    </fieldset>

    <div class="form-group">
      <p>How about your partner's skills?</p>
      <%= f.input :serve, as: :range, input_html: { min: '0', max: '10', step: '1' }, required: false %>
      <%= f.input :return, as: :range, input_html: { min: '0', max: '10', step: '1' }, required: false %>
      <%= f.input :forehand, as: :range, input_html: { min: '0', max: '10', step: '1' }, required: false %>
      <%= f.input :backhand, as: :range, input_html: { min: '0', max: '10', step: '1' }, required: false %>
      <%= f.input :volley, as: :range, input_html: { min: '0', max: '10', step: '1' }, required: false %>
      <%= f.input :speed, as: :range, input_html: { min: '0', max: '10', step: '1' }, required: false %>
      <%= f.input :power, as: :range, input_html: { min: '0', max: '10', step: '1' }, required: false %>
      <%= f.input :endurance, as: :range, input_html: { min: '0', max: '10', step: '1' }, required: false %>
    </div>

    <%= f.input :content, as: :text, placeholder: "let other players know something about your partner", label: false %>
    <div class="cta-back">
      <%= f.button :submit, "Review your partner now",  class: "btn btn-primary cta-button" %>
    </div>
  <% end %>
</div>
