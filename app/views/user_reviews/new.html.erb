<div class="container">

  <%= simple_form_for [@user, @user_review] do |f| %>
    <div class="user-review-step1">
      <fieldset class="form-group radio_buttons optional user_review_thumb">
        <legend class="col-form-label pt-0">Would you recommend to others players to play with ...? </legend>
        <input type="hidden" name="user_review[thumb]" value="">
        <div class="group-radio">
          <div class="form-check form-check-inline" id="thumb-down">
            <input class="form-check-input radio_buttons optional" readonly="readonly" type="radio" value="false" name="user_review[thumb]" id="user_review_thumb_false">
            <label class="collection_radio_buttons" for="user_review_thumb_false">Not really..</label>
          </div>
          <div class="form-check form-check-inline" id="thumb-up">
            <input class="form-check-input radio_buttons optional" type="radio" value="true" name="user_review[thumb]" id="user_review_thumb_true">
            <label class="collection_radio_buttons" for="user_review_thumb_true">Of Course!</label>
          </div>
        </div>
      </fieldset>

      <%= f.input :content, as: :text, label: "How is playing with ...?" %>
      <span class="btn btn-flat" id="next-review-step">Next</span>
    </div>

    <div class="form-group user-review-step2">
      <p>How about your partner's skills?</p>
      <div class="stroke-fitness-review">
        <span class="given-score">1</span>
        <%= f.input :serve, as: :range, label: "serve", input_html: { min: '0', max: '10', step: '1' }, required: false %>
      </div>
      <div class="stroke-fitness-review">
        <span class="given-score">1</span>
        <%= f.input :return, as: :range, label: "return", input_html: { min: '0', max: '10', step: '1' }, required: false %>
      </div>
      <div class="stroke-fitness-review">
        <span class="given-score">1</span>
        <%= f.input :forehand, as: :range, label: "forehand", input_html: { min: '0', max: '10', step: '1' }, required: false %>
      </div>
      <div class="stroke-fitness-review">
        <span class="given-score">1</span>
        <%= f.input :backhand, as: :range, label: "backhand", input_html: { min: '0', max: '10', step: '1' }, required: false %>
      </div>
      <div class="stroke-fitness-review">
        <span class="given-score">1</span>
        <%= f.input :volley, as: :range, label: "volley", input_html: { min: '0', max: '10', step: '1' }, required: false %>
      </div>
      <div class="stroke-fitness-review">
        <span class="given-score">1</span>
        <%= f.input :speed, as: :range, label: "speed", input_html: { min: '0', max: '10', step: '1' }, required: false %>
      </div>
      <div class="stroke-fitness-review">
        <span class="given-score">1</span>
        <%= f.input :power, as: :range, label: "power", input_html: { min: '0', max: '10', step: '1' }, required: false %>
      </div>
      <div class="stroke-fitness-review">
        <span class="given-score">1</span>
        <%= f.input :endurance, as: :range, label: "endurance", input_html: { min: '0', max: '10', step: '1' }, required: false %>
      </div>
      <span class="btn btn-flat" id="back-review-step">Back</span>

      <div class="cta-back-unique">
        <%= f.button :submit, "Review your partner now",  class: "btn btn-flat" %>
      </div>
    </div>

  <% end %>
</div>
