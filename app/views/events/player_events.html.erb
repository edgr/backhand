<div class="container">
  <% @events.each do |event| %>
    <div class="event-card">
      <div class="all-players">
        <% event.event_partners(current_user).each do |partner| %>
          <div class="avatar-name-club">
            <%= cl_image_tag partner.picture, class: "avatar"%>
            <div class="name-club">
              <span class="name">
                <%= partner.full_name %>
              </span>
            </div>
          </div>
        <% end %>
        <span class="club">
          at <%= event.club.name %>
        </span>
      </div>
      <%= event.date_time.strftime("%I:%M%p") %>
    </div>
  <% end %>
</div>
