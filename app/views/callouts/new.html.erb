<div class="container">
  <%= simple_form_for @callout do |f| %>
    <%= f.input :recipients, label: false, collection: [['0', t('.everyone')], ['1', t('.my_club')], ['2', t('.my_favorites')]], label_method: :second, value_method: :first, selected: ["players in my club only"] %>
    <div id="level-slider"></div>
    <%= f.input :minimum_level %>
    <%= f.input :maximum_level %>
    <%= f.input :message, label: false %>
    <%= f.submit t('.send'), class:"btn btn-primary cta-main", id:"send_callout" %>
  <% end %>
</div>
